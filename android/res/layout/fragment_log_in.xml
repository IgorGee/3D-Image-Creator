<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pin_layout"
        android:layout_width="@dimen/width_log_in_edit_text"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <EditText
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pin_code_hint"
            android:singleLine="true"
            android:gravity="center"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/authorize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/pin_layout"
        android:layout_alignRight="@id/pin_layout"
        android:layout_below="@id/pin_layout"
        android:background="@color/colorPrimary"
        android:text="@string/authenticate_button_text"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/button_margin_top"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/auth_url_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/pin_layout"
        android:layout_alignRight="@id/pin_layout"
        android:layout_below="@id/authorize"
        android:background="@color/colorPrimary"
        android:text="@string/get_pin_text"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/button_margin_top"
        android:textAllCaps="false"
        />

</RelativeLayout>